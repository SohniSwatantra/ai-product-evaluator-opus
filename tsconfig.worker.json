{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/worker",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": ".",
    "allowJs": false
  },
  "include": [
    "scripts/evaluate-product.ts",
    "lib/ssr-calculator.ts",
    "lib/reference-anchors.ts",
    "lib/ax-evaluator.ts",
    "lib/web-scraper.ts",
    "lib/db.ts",
    "types/**/*.ts"
  ]
}